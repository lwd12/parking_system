<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 화면 가기 -->
    <ImageButton
        android:id="@+id/homeBT4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/nome1"
        android:layout_width="325dp"
        android:layout_height="85dp"
        android:layout_marginStart="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ju4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/car_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:text="차량번호:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nome1"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/car_number_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="차량번호를 입력하세요."
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/car_number_label"
        app:layout_constraintTop_toBottomOf="@id/nome1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/visit_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방문일자:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_number_input"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/visit_date_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="방문일을 입력하세요."
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/visit_date_label"
        app:layout_constraintTop_toBottomOf="@id/car_number_input"
        tools:ignore="MissingConstraints" />

    <!-- 등록하기 버튼 -->

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="등록하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/visit_date_input"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
